generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum UserRole {
  FARMER
  ADMIN
}

enum CertificationStatus {
  PENDING
  CERTIFIED
  DECLINED
}

model User {
  id        String   @id @default(uuid())
  email     String   @unique
  password  String
  role      UserRole @default(FARMER)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  farmer Farmer?
  admin  Admin?

  @@index([email])
  @@map("users")
}

model Farmer {
  id                 String              @id @default(uuid())
  userId             String              @unique
  name               String
  farmSize           Float
  cropType           String
  certificationStatus CertificationStatus @default(PENDING)
  latitude           Float?
  longitude          Float?
  certifiedAt        DateTime?
  certifiedBy        String?
  declinedAt         DateTime?
  declinedBy         String?
  declineReason      String?
  createdAt          DateTime            @default(now())
  updatedAt          DateTime            @updatedAt

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([userId])
  @@index([certificationStatus])
  @@map("farmers")
}

model Admin {
  id        String   @id @default(uuid())
  userId    String   @unique
  name      String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([userId])
  @@map("admins")
}